rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura pública dos links
    match /categories/{category} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /links/{link} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Configurações do sistema (apenas leitura pública, escrita autenticada)
    match /settings/{setting} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
